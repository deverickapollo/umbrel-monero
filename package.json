{
  "name": "umbrel-middleware",
  "version": "0.4.0",
  "description": "Middleware for Monero Node",
  "author": "Deverick",
  "type": "module",
  "scripts": {
    "lint": "eslint",
    "lintui": "cd ui && npm run lint",
    "build": "npx tsc --build --verbose",
    "start": "node  ./bin/www",
    "start:server:dev": "NODE_ENV=development node --watch --trace-deprecation ./bin/www.js",
    "start:ui:dev": "cd ui && npm run serve:dev",
    "start:all:dev": "run-p start:server:dev start:ui:dev",
    "install:ui": "cd ui && npm install --fetch-timeout 1000000",
    "build:ui": "cd ui && npm run build",
    "serve:ui": "cd ui && npm run serve",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js  --detectOpenHandles --forceExit --verbose",
    "coverage": "nyc --all mocha --file test.setup 'test/**/*.js'",
    "postcoverage": "codecov"
  },
  "dependencies": {
    "axios": "0.21.2",
    "body-parser": "^1.18.2",
    "bs58": "^5.0.0",
    "camelize-keys": "^1.0.0",
    "continuation-local-storage": "^3.2.1",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "helmet": "^7.1.0",
    "js-sha3": "^0.9.2",
    "module-alias": "^2.1.0",
    "monero-ts": "^0.11.3",
    "morgan": "^1.9.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2",
    "uuid": "^3.3.2",
    "winston": "^3.0.0-rc5",
    "winston-daily-rotate-file": "^3.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.8",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.26.8",
    "@eslint/js": "^9.12.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.7.0",
    "codecov": "^3.7.1",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.28.0",
    "globals": "^15.10.0",
    "jest": "^29.7.0",
    "nyc": "15.1.0",
    "proxyquire": "^2.0.1",
    "supertest": "^7.0.0",
    "typescript-eslint": "^8.8.0",
    "vite-plugin-checker": "^0.8.0",
    "vue-tsc": "^2.1.6"
  },
  "nyc": {
    "exclude": [
      "test",
      "test.setup.js"
    ],
    "transform": [],
    "sourceMap": false,
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": "false"
  }
}
